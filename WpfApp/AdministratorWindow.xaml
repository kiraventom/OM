<Window x:Class="WpfApp.AdministratorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="{StaticResource AdministratorInterface}" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        
        <TabControl Grid.Row="0" x:Name="MainTC">
            <TabItem Header="{StaticResource MethodsEditing}">
                <Label Content="Здесь будет расположено меню редактирования методов"/>
            </TabItem>
            <TabItem Header="{StaticResource ExamplesEditing}">
                <Label Content="Здесь будет расположено меню редактирования примеров"/>
            </TabItem>
            <TabItem Header="{StaticResource UsersDBEditing}">
                <DataGrid 
                    x:Name="UsersDG"
                    CanUserReorderColumns="False" 
                    CanUserSortColumns="False"/>
            </TabItem>
        </TabControl>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Label Content="{StaticResource EnterPassword}" VerticalContentAlignment="Center" Margin="5,0,0,0"/>
            <PasswordBox x:Name="PasswordToHashPB" Width="200" Margin="3"/>
            <Button  x:Name="GenerateHashBt" Content="{StaticResource GenerateHash}" Margin="3" Padding="5,0,5,0" HorizontalAlignment="Right" Click="GenerateHashBt_Click"/>
        </StackPanel>
        <Popup x:Name="HashCopiedPU" StaysOpen="False" Placement="Center"
         AllowsTransparency="True" PopupAnimation="Fade">
            <TextBlock TextWrapping="Wrap" Background="LightGreen" Opacity="0.8" Text="{StaticResource HashCopiedToClipboard}"/>
        </Popup>
    </Grid>
</Window>
