<Window x:Class="WpfApp.UserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="UserWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="1.5*"/>
        </Grid.ColumnDefinitions>

        <GroupBox Grid.Column="0" Header="Метод решения" Margin="5, 0, 5, 0"/>
        <GroupBox Grid.Column="1" Header="Пример" Margin="5, 0, 5, 0"/>
        <GroupBox Grid.Column="2" Header="Параметры процесса" Margin="5, 0, 5, 0"/>
        <Grid Grid.Column="3" Margin="5, 0, 5, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="12*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            
            <Button Grid.Row="0" Content="ГРАФИК" FontSize="30"/>
            <Button Grid.Row="1" Content="Рассчитать" Margin="0,5,0,5"/>
        </Grid>
    </Grid>
</Window>
